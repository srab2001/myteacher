{
  "version": 2,
  "installCommand": "npm install --ignore-scripts && npm run postinstall",
  "functions": {
    "api/index.ts": {
      "runtime": "@vercel/node@3.0.0",
      "includeFiles": "src/**,prisma/**,node_modules/**"
    }
  },
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/api/index.ts"
    }
  ]
}
